@if (this.Errors != null && this.Errors.Any())
{
    foreach (var error in this.Errors)
    {
        <div class="alert alert-danger" role="alert">
            <strong>@error.Item</strong>@*: @error.Error*@
        </div>
    }
}

@code {
    [Parameter]
    public IEnumerable<Infrastructure.Common.ApiError> Errors { get; set; }
}
