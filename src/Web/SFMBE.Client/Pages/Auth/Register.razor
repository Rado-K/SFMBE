@page "/register"

<ErrorList Errors=@this.response?.Errors />
<EditForm Model="this.userLoginRequestModel" OnValidSubmit="this.CreateUser">
    <DataAnnotationsValidator />

    <div class="form-group">
        <label>Email:</label>
        <div>
            <InputText class="form-control" @bind-Value="this.userLoginRequestModel.Email" />
            <ValidationMessage For="(() => this.userLoginRequestModel.Email)" />
        </div>
    </div>

    <div class="form-group">
        <label>Password:</label>
        <div>
            <InputPassword class="form-control" @bind-Value="this.userLoginRequestModel.Password" />
            <ValidationMessage For="(() => this.userLoginRequestModel.Password)" />
        </div>
    </div>

    <div class="form-group">
        <label>Confirm Password:</label>
        <div>
            <InputPassword class="form-control" @bind-Value="this.userLoginRequestModel.ConfirmPassword" />
            <ValidationMessage For="(() => this.userLoginRequestModel.ConfirmPassword)" />
        </div>
    </div>

    <button type="submit" class="btn btn-block">Register</button>
</EditForm>